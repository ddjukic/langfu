{
  "name": "langfu-app",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "mcp:dev": "tsx scripts/mcp-server.ts",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "postinstall": "prisma generate",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari' --project='Mobile Safari SE' --project='Small Mobile (320px)' --project='Medium Mobile (375px)' --project='Tablet (768px)'",
    "test:e2e:dark": "playwright test tests/e2e/dark-mode.spec.ts",
    "test:a11y": "playwright test tests/a11y/",
    "test:all": "pnpm test && pnpm test:e2e",
    "playwright:install": "playwright install",
    "generate:icons": "node scripts/generate-icons.js",
    "generate:screenshots": "node scripts/generate-screenshots.js",
    "pwa:setup": "pnpm generate:icons && pnpm generate:screenshots",
    "fix:translations": "tsx scripts/fix-all-story-translations.ts",
    "verify:translations": "tsx scripts/verify-all-translations.ts",
    "test:translations": "tsx scripts/test-translation-display.ts"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.15",
    "@mendable/firecrawl-js": "^1.29.3",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@prisma/client": "^6.14.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/html2canvas": "^1.0.0",
    "@use-gesture/react": "^10.3.1",
    "@vercel/postgres": "^0.10.0",
    "ai": "^5.0.15",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.19.2",
    "framer-motion": "^12.23.12",
    "html2canvas": "^1.4.1",
    "immer": "^10.1.1",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.540.0",
    "next": "15.4.6",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "openai": "^5.12.2",
    "prisma": "^6.14.0",
    "puppeteer": "^24.17.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-swipeable": "^7.0.2",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "turndown": "^7.2.1",
    "zod": "^3.23.8",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint-config-next": "^15.4.7",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lighthouse": "^12.8.1",
    "lint-staged": "^16.1.5",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.3",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
